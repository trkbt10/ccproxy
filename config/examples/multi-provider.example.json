{
  "providers": {
    "default": {
      "type": "openai",
      "apiKey": "${OPENAI_API_KEY}",
      "modelMapping": {
        "byGrade": {
          "high": "gpt-4-turbo",
          "mid": "gpt-4",
          "low": "gpt-3.5-turbo"
        },
        "aliases": {
          "claude-3-opus": "gpt-4-turbo",
          "claude-3-sonnet": "gpt-4",
          "claude-3-haiku": "gpt-3.5-turbo"
        }
      },
      "defaultHeaders": {
        "OpenAI-Beta": "responses-2025-06-21"
      }
    },
    "claude-provider": {
      "type": "claude",
      "apiKey": "${CLAUDE_API_KEY}",
      "modelMapping": {
        "byGrade": {
          "high": "claude-3-opus-20240229",
          "mid": "claude-3-sonnet-20240229",
          "low": "claude-3-haiku-20240307"
        },
        "aliases": {
          "gpt-4": "claude-3-sonnet-20240229",
          "gpt-3.5-turbo": "claude-3-haiku-20240307"
        }
      }
    },
    "gemini-provider": {
      "type": "gemini",
      "apiKey": "${GEMINI_API_KEY}",
      "modelMapping": {
        "byGrade": {
          "high": "gemini-1.5-pro",
          "mid": "gemini-1.5-flash",
          "low": "gemini-1.0-pro"
        }
      }
    }
  },
  "tools": [
    {
      "name": "text_editor",
      "steps": [
        {
          "kind": "internal",
          "handler": "text_editor",
          "when": { "actionIn": ["preview", "plan"] }
        },
        {
          "kind": "responses_model",
          "providerId": "default",
          "model": "gpt-4"
        }
      ]
    }
  ]
}